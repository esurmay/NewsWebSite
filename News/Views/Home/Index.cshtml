<div class="row">
    <div class="col-sm-6" style="border-right: 1px solid black; border-bottom: 1px solid black;">
        @foreach (var item in Model)
        {
       
                <div class="col-xs-12" style="border-bottom: 1px solid black;">
                    <img class="img-responsive img-thumbnail" src="@item.imageUrl" alt="">
                    <h2>
                        <a href="@item.Link" target="_blank" style="color:black;">@item.Title</a>
                    </h2>
                    <small>@item.pubDate</small><br>
                    <div class="gppost hide-class">
                        <div style="overflow: hidden; height: 40px;">
                            @item.Description
                        </div>
                        <a href="#" data-ctrl="" class="">Ver mas(2 lineas)</a>
                    </div>
                </div>
            if (i > 10)
